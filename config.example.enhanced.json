{
  "broker": {
    "enabled": true,
    "queue_size": 1000
  },
  "webhook": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 5000,
    "secret_key": "your-webhook-secret-key-here"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "audit_log_file": "/var/log/mira/audit.log"
  },
  "integrations": {
    "trello": {
      "enabled": false,
      "api_key": null,
      "api_token": null,
      "board_id": null
    },
    "jira": {
      "enabled": false,
      "url": null,
      "username": null,
      "api_token": null,
      "project_key": null
    },
    "github": {
      "enabled": false,
      "token": null,
      "repository": null
    },
    "airtable": {
      "enabled": false,
      "api_key": null,
      "base_id": null
    },
    "google_docs": {
      "enabled": false,
      "credentials_path": null,
      "folder_id": null
    }
  },
  "agents": {
    "project_plan_agent": {
      "enabled": true
    },
    "risk_assessment_agent": {
      "enabled": true
    },
    "status_reporter_agent": {
      "enabled": true
    },
    "orchestrator_agent": {
      "enabled": true
    }
  },
  "security": {
    "api_key_enabled": true,
    "api_key_expiry_days": 30,
    "ip_allowlist": [],
    "ip_denylist": [],
    "webhook_secrets": {
      "github": "your-github-webhook-secret",
      "trello": "your-trello-webhook-secret",
      "jira": "your-jira-webhook-secret"
    }
  },
  "operational": {
    "rate_limiting_enabled": false,
    "rate_limit_per_minute": 60,
    "verbose_logging": false,
    "maintenance_mode": false,
    "maintenance_message": "System is currently under maintenance"
  },
  "observability": {
    "metrics_enabled": true,
    "health_check_enabled": true
  }
}
