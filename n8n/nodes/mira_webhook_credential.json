{
  "name": "miraWebhookApi",
  "displayName": "Mira Webhook API",
  "class": "GenericCredential",
  "properties": [
    {
      "displayName": "API Base URL",
      "name": "baseUrl",
      "type": "string",
      "default": "http://localhost:5000",
      "placeholder": "http://your-mira-instance.com",
      "description": "The base URL of your Mira webhook API instance"
    },
    {
      "displayName": "Service Name",
      "name": "serviceName",
      "type": "options",
      "options": [
        {
          "name": "N8N",
          "value": "n8n"
        },
        {
          "name": "GitHub",
          "value": "github"
        },
        {
          "name": "Trello",
          "value": "trello"
        },
        {
          "name": "Jira",
          "value": "jira"
        },
        {
          "name": "Custom",
          "value": "custom"
        }
      ],
      "default": "n8n",
      "description": "The service identifier for webhook routing"
    },
    {
      "displayName": "Webhook Secret Key",
      "name": "secretKey",
      "type": "string",
      "typeOptions": {
        "password": true
      },
      "default": "",
      "description": "Secret key for HMAC-SHA256 signature verification (optional but recommended)"
    },
    {
      "displayName": "Authentication Type",
      "name": "authenticationType",
      "type": "options",
      "options": [
        {
          "name": "None",
          "value": "none"
        },
        {
          "name": "API Key (Header)",
          "value": "apiKeyHeader"
        },
        {
          "name": "Bearer Token",
          "value": "bearerToken"
        },
        {
          "name": "Signature (HMAC-SHA256)",
          "value": "hmacSignature"
        }
      ],
      "default": "hmacSignature",
      "description": "Authentication method for webhook requests"
    },
    {
      "displayName": "API Key",
      "name": "apiKey",
      "type": "string",
      "typeOptions": {
        "password": true
      },
      "default": "",
      "displayOptions": {
        "show": {
          "authenticationType": [
            "apiKeyHeader",
            "bearerToken"
          ]
        }
      },
      "description": "API key or bearer token for authentication"
    },
    {
      "displayName": "API Key Header Name",
      "name": "apiKeyHeaderName",
      "type": "string",
      "default": "X-API-Key",
      "displayOptions": {
        "show": {
          "authenticationType": [
            "apiKeyHeader"
          ]
        }
      },
      "description": "Name of the header to use for API key authentication"
    }
  ]
}
